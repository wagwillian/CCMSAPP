@* @page "/imprimirelatorio"
@using Portal.Relatorios
@model Portal.Relatorios.RelatoriosModel



<h3>Imprimir Relatorio</h3>

 
<form method="post">
    <div class="row mb-3">
        <div class="col-md-4">
            <label asp-for="DataInicio" class="form-label"></label>
            <input asp-for="DataInicio" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="DataFim" class="form-label"></label>
            <input asp-for="DataFim" class="form-control" />
        </div>
        <div class="col-md-4">
            <label asp-for="Turma" class="form-label"></label>
            <input asp-for="Turma" class="form-control" />
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" asp-page-handler="Filtrar" class="btn btn-primary">
                <i class="bi bi-funnel"></i> Filtrar
            </button>
            <button type="submit" asp-page-handler="Exportar" class="btn btn-success">
                <i class="bi bi-file-earmark-excel"></i> Exportar para Excel
            </button>
        </div>
    </div>
</form>

<hr />
@if (Model.Relatorios.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Turma</th>
                    <th>Data</th>
                    <th>Horário</th>
                    <th>Disciplina</th>
                    <th>Turno</th>
                    <th>Comentário</th>
                    <th>Barulho</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var relatorio in Model.Relatorios)
                {
                    <tr>
                        <td>@relatorio.Turma</td>
                        <td>@relatorio.Data.ToShortDateString()</td>
                        <td>@relatorio.HorarioAula</td>
                        <td>@relatorio.Disciplina</td>
                        <td>@relatorio.Turno</td>
                        <td>@relatorio.Comentario</td>
                        <td>
                            @if (relatorio.Barulho)
                            {
                                <span class="badge bg-danger">Sim</span>
                            }
                            else
                            {
                                <span class="badge bg-success">Não</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info" role="alert">
        Nenhum relatório encontrado com os filtros selecionados.
    </div>
}

